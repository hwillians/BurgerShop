@model DomainModelBurger.Menu
@inject WebBurger.Services.MenuService Menu

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Menu</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">

            <div class="form-group row">
                <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-5">
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="col-sm-5">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Price" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-2">
                    <input type="number" asp-for="Price" class="form-control" />
                </div>
                <div class="col-sm-5">
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-5">
                    <textarea asp-for="Description" class="form-control"></textarea>
                </div>
                <div class="col-sm-5">
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="BurgerProductId" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-5">
                    <select asp-for="BurgerProductId" class="form-control"
                            asp-items="@(new SelectList(Menu.GetBurgersAsync(), "Key", "Value"))">
                        <option value="">Please select one</option>
                    </select>
                </div>
                <div class="col-sm-5">
                    <span asp-validation-for="BurgerProductId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="BeverageProductId" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-5">
                    <select asp-for="BeverageProductId" class="form-control"
                            asp-items="@(new SelectList(Menu.GetBeveragesAsync(), "Key", "Value"))">
                        <option value="">Please select one</option>
                    </select>
                </div>
                <div class="col-sm-5">
                    <span asp-validation-for="BeverageProductId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="SideProductId" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-5">
                    <select asp-for="SideProductId" class="form-control"
                            asp-items="@(new SelectList(Menu.GetSidesAsync(), "Key", "Value"))">
                        <option value="">Please select one</option>
                    </select>
                </div>
                <div class="col-sm-5">
                    <span asp-validation-for="SideProductId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="DessertProductId" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-5">
                    <select asp-for="DessertProductId" class="form-control"
                            asp-items="@(new SelectList(Menu.GetDessertsAsync(), "Key", "Value"))">
                        <option value="">Please select one</option>
                    </select>
                </div>
                <div class="col-sm-5">
                    <span asp-validation-for="DessertProductId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}